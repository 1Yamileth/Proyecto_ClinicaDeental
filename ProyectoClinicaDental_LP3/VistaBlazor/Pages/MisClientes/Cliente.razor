@page "/Cliente"
@using Modelos;

<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">

        <h3>Lista de Clientes</h3>
        <div class="form-group row">
            <div class="col-sm-2">
                <a href="/Servicio" class="btn btn-primary m-2">Nuevo</a>
            </div>
        </div>

        @if (listaClientes == null)
        {
            <p>No existen clientes en el sistema</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Identidad Cliente</th>
                        <th>Nombre</th>
                        <th>Telefono</th>
                        <th>Correo  </th>
                        <th>Direccion</th>
                        <th>Fecha Nacimiento</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ClienteM clie in listaClientes)
                    {
                        <tr>
                            <th>@clie.IdentidadCliente</th>
                            <th>@clie.Nombre</th>
                            <th>@clie.Telefono</th>
                            <th>@clie.Correo</th>
                            <th>@clie.Direccion</th>
                            <th>@clie.FechaNacimiento</th>

                            
                            <th>
                                <a class="btn btn-success" href="@($"/Cliente/Editar/{clie.IdentidadCliente}")">Editar</a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </Authorized>
    <NotAuthorized>
        <h3>NO TIENE PERMISO PARA ESTA RUTA</h3>
    </NotAuthorized>
</AuthorizeView>
