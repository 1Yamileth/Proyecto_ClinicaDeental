@page "/Login"
@page "/Login/{MensajeError}"
@attribute [AllowAnonymous]
<h3>Login</h3>

@if (MensajeError != null)
{
    <div class="text-danger">@MensajeError</div>
}

<form method="post" action="/autenticar/validar">
    <p></p>

    <div class="form-group">
        <label>Usuario:</label>
        <input type="text" name="CodigoUsuario" class="form-control col-sm-6 col-md-4" style="width: 500px" />
    </div>

    <p></p>

    <div class="form-group">
        <label>Contraseña:</label>
        <input type="password" name="Contrasena" class="form-control col-sm-6 col-md-4" style="width: 500px" />
    </div>

    <p></p>

    <button class="btn btn-primary">Ingresar</button>
</form>

@code {
    [Parameter] public string MensajeError { get; set; }
}
