@page "/Servicio/Nuevo"

<AuthorizeView Roles="Administrador">
    <Authorized Context="AuthenticationState">
        <h3>Nuevo Servicio</h3>

        <EditForm Model="@prod">
            <DataAnnotationsValidator />

            <div class="form-group row">
                <label for="Codigo" class="col-sm-2 col-form-label">
                    Código Servicio
                </label>
                <div class="col-sm-10">
                    <InputText id="Codigo" class="form-control" @bind-Value="prod.CodigoServicio" />
                    <ValidationMessage For="@(() => prod.CodigoServicio)" />
                </div>
            </div>

            <div class="form-group row">
                <label for="Descripcion" class="col-sm-2 col-form-label">
                    Descripción
                </label>
                <div class="col-sm-10">
                    <InputText id="Descripcion" class="form-control" @bind-Value="prod.Descripcion" />
                    <ValidationMessage For="@(() => prod.Descripcion)" />
                </div>
            </div>

            <div class="col-sm-2">
                <b>Duración:</b>
                <RadzenDatePicker id="Fecha" class="w-100" DateFormat="t" @bind-Value="prod.Duracion" />
            </div>


            <div class="form-group row">
                <label for="Codigo" class="col-sm-2 col-form-label">
                    Código Usuario
                </label>
                <div class="col-sm-10">
                    <InputText id="Codigo" class="form-control" @bind-Value="prod.CodigoUsuario" />
                    <ValidationMessage For="@(() => prod.CodigoUsuario)" />
                </div>
            </div>

            <div class="form-group row">
                <label for="Precio" class="col-sm-2 col-form-label">
                    Precio
                </label>
                <div class="col-sm-10">
                    <InputNumber id="Precio" class="form-control" @bind-Value="prod.Precio" />
                </div>
            </div>


            <div class="form-group row">
                <label for="EstaActivo" class="col-sm-2 col-form-label">
                    Esta Activo
                </label>
                <div class="col-sm-10">
                    <InputCheckbox @bind-Value="prod.EstadoActivo" />
                </div>
            </div>

            <div class="col-sm-2">
                <b>Fecha:</b>
                <RadzenDatePicker id="Fecha" class="w-100" DateFormat="d" @bind-Value="prod.Disponibilidad" />
            </div>





            <div class="form-group row">
                <p>
                    <input type="submit" class="btn btn-primary" value="Guardar" @onclick="Guardar" />
                    <input type="submit" class="btn btn-danger" value="Cancelar" @onclick="Cancelar" />
                </p>
            </div>


        </EditForm>

    </Authorized>
    <NotAuthorized>
        <h3>No tiene permisos para esta ruta</h3>
    </NotAuthorized>
</AuthorizeView>
